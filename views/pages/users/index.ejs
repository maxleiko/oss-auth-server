<!DOCTYPE html>
<html>

<head>
  <%- include('../../partials/header', { title: title }) %>
  <script type="application/javascript">
  function deleteUsers() {
    fetch('/users', { method: 'DELETE' })
      .then(function (res) {
        location.href = '/users';
      })
      .catch(function (err) {
        console.log('nok', err);
      });
  }
  </script>
</head>

<body>
  <%- include('../../partials/top', { active: active }) %>
    <div class="container-fluid">
      <% if (error) {%>
        <div class="col-xs-12 alert alert-danger alert-dismissable">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          Error: <%= error %>
        </div>
      <% } %>
      <div class="col-sm-2">
        <h3>Add new user:</h3>
        <form action="/users" method="post">
          <div class="form-group">
            <label for="email">E-mail</label>
            <input type="email" class="form-control" name="email" />
          </div>

          <div class="form-group">
            <label for="phone">Phone number</label>
            <input type="phone" class="form-control" name="phone" />
          </div>

          <button type="submit" class="btn btn-sm">Add</button>
        </form>
      </div>
      <div class="col-sm-offset-1 col-sm-9">
        <div class="col-xs-12">
          <h3>Current users:</h3>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>E-mail</th>
                <th>Phone</th>
                <th>Secret</th>
                <th class="text-right"><button class="btn btn-xs btn-danger" onclick="deleteUsers()">Delete all</button></th>
              </tr>
            </thead>
            <% users.forEach(function (user) { %>
              <tr>
                <td><%= user.email %></td>
                <td><%= user.phone %></td>
                <td><%= user.secret %></td>
                <td class="text-right"><a href="/users/<%= user._id %>">Show</a></td>
              </tr>
            <% }); %>
            <% if (users.length === 0) { %>
              <tr><td colspan="3" class="text-center"><em>- empty -</em></td></tr>
            <% } %>
          </table>
        </div>
      </div>
    </div>
</body>

</html>
